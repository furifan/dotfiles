[user]
    name = vkgtaro
    email = vkg.taro@gmail.com

[alias]
    ci = commit -a
    co = checkout
    st = status -a
    praise = blame 
    up = pull --rebase
    difflog = log -p HEAD@{3.days.ago}
    edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
    add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"

[color]
    diff = auto
    status = auto
    branch = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[tig "bind"]
    generic = g move-first-line
    generic = G move-last-line
